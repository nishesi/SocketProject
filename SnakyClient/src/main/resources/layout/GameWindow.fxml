<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<BorderPane id="root" fx:id="anchorPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <Pane id="canvas-pane">
            <Canvas id="canvas" fx:id="canvas" height="350.0" width="350.0"/>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" top="10.0"/>
            </BorderPane.margin>
        </Pane>
    </center>
    <right>
        <VBox id="right-bar">
            <ButtonBar id="button-bar">
                <buttons>
                    <Button fx:id="startButton" mnemonicParsing="false" text="Start"/>
                    <Button fx:id="exitButton" mnemonicParsing="false" text="Exit"/>
                </buttons>
            </ButtonBar>
        </VBox>
    </right>

    <!--    <stylesheets>-->
    <!--        <URL value="@../css/main.css"/>-->
    <!--        <URL value="@../css/GameWindow.css"/>-->
    <!--    </stylesheets>-->
</BorderPane>
