<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<AnchorPane id="root" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.itis.snaky.client.controllers.AuthenticationWindowController">
    <children>
        <VBox id="form" layoutX="175.0" layoutY="85.0">
            <children>
                <Label id="nicknameLabel" text="Enter your nickname:"/>
                <TextField fx:id="nicknameField" promptText="Nickname..."/>
                <Button fx:id="enterButton" mnemonicParsing="false" onAction="#send" text="Enter"/>
            </children>
        </VBox>
    </children>

    <stylesheets>
        <URL value="@/css/main.css"/>
        <URL value="@/css/AuthenticationWindow.css"/>
    </stylesheets>
</AnchorPane>
