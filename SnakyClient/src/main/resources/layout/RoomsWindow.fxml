<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane id="root" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.itis.snaky.client.controllers.RoomsWindowController">
    <center>
        <ListView id="rooms-list" fx:id="roomsListView" onMouseClicked="#roomChosen">
            <BorderPane.margin>
                <Insets bottom="50.0" left="50.0" right="100.0" top="50.0"/>
            </BorderPane.margin>
        </ListView>
    </center>
    <right>
        <Button fx:id="backButton" mnemonicParsing="false" text="Change Nickname" onAction="#toAuthWindow">
            <BorderPane.margin>
                <Insets top="10" right="10"/>
            </BorderPane.margin>
        </Button>

    </right>
