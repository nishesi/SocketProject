<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane id="root" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.itis.snaky.client.controllers.RoomsWindowController">
    <center>
        <ListView id="rooms-list" fx:id="roomsListView" onMouseClicked="#roomChosen">
            <BorderPane.margin>
                <Insets bottom="50.0" left="50.0" right="100.0" top="50.0"/>
            </BorderPane.margin>
        </ListView>
    </center>
    <right>
        <VBox alignment="TOP_CENTER" spacing="10.0">
            <BorderPane.margin>
                <Insets right="10.0" top="10.0"/>
            </BorderPane.margin>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#toAuthWindow" text="Change Nickname"/>
            <Button fx:id="updateRoomsButton" mnemonicParsing="false" onAction="#updateRooms" text="Update Rooms"/>
        </VBox>
    </right>
</BorderPane>
